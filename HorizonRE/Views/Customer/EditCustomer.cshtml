@model HorizonRE.Models.Customer
@{
    ViewBag.Title = "EditCustomer";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-md-5 mt-sm-0">
    <i class="fas fa-arrow-left text-primary"></i>
    @Html.ActionLink("Back to Customers", "Index", "Customer")
    <h2 class="text-center display-4">Edit Customer</h2>
    @using (Html.BeginForm("EditCustomer", "Customer", FormMethod.Post))
    {
        @*@Html.AntiForgeryToken()*@


        @Html.Partial("_AddEditCustomer")
        @Html.HiddenFor(model => model.CustomerId)


        <button type="submit" class="btn btn-primary float-right">Save</button>
    }

</div>

