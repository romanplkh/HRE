@model  HorizonRE.ViewModel.ListingCustomerAgentView


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Index</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("", "", FormMethod.Get))
            {

                <div class="input-group w-50">

                    @Html.TextBox("SearchCustomer", null, new { @class = "form-control", placeholder = "Search Customer" })
                    <div class="input-group-append">
                        <button type="button" class="btn btn-outline-primary">Search</button>
                    </div>
                </div>

            }

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table id="customers" class="table table-bordered table-hover mb-5">
                <thead class="thead-dark">
                    <tr>
                        <th class="lead">Customer Name</th>
                        <th class="lead">Phone</th>
                        <th class="lead">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customers)
                    {

                        string selectedRow = "";

                        if (customer.CustomerId == ViewBag.SelectedCustomer)
                        {
                            selectedRow = "alert-info";
                        }

                        <tr class="@selectedRow">

                            <td>

                                @Html.ActionLink($"{customer.FullName}", "Index", new { customerId = customer.CustomerId })
                            </td>
                            <td> @customer.Phone</td>
                            <td class="text-center">@Html.ActionLink("Add Listing", "Create", "ListingsManagement", new { custId = customer.CustomerId } , new { @class = "btn btn-success btn-sm" })</td>
                        </tr>
                    }
                </tbody>
            </table>


            @if (Model.Listings != null && Model.Listings.Count() > 0)
            {
                <h3> Customer Listings </h3>

                <table class="table">
                    <tr>
                        <th>
                            Listing Id
                        </th>
                        <th>
                            Contract Start
                        </th>
                        <th>
                            Contract End
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Agent
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var listing in Model.Listings)
                    {
                        <tr>
                            <td>
                                @listing.ListingId
                            </td>
                            <td>
                                @listing.ListingStartDate
                            </td>
                            <td>
                                @listing.ListingEndDate
                            </td>
                            <td>
                                @listing.StreetAddress, @listing.City
                            </td>
                            <td>
                                @listing.Employee.FullName
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = listing.ListingId })
                            </td>

                        </tr>

                    }

                </table>


            }



            @if (ViewBag.ShowMsg = true && ViewBag.SelectedCustomer != null && Model.Listings.Count() == 0)
            {

                <div class="alert alert-primary" role="alert">
                    No listings found
                </div>

            }
        </div>
    </div>

</div>



